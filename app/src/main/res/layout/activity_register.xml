<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_splash"
    android:fillViewport="true"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/R_rl"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/R_backarrow"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:text="Register"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_rl"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Prénom"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Prénom"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Prénom"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_nom_de_famille"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="nom de famille"
            android:layout_height="52dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_nom_de_famille"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Adresse_email"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Adresse e-mail"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Adresse_email"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:id="@+id/R_Mot_de_passe"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/lateefregular"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Mot de passe"
            android:layout_height="52dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Mot_de_passe"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Numéro_de_téléphone"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Numéro de téléphone"
            android:layout_height="52dp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Numéro_de_téléphone"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:id="@+id/R_Adresse"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/lateefregular"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Adresse"
            android:layout_height="52dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Adresse"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Date_de_naissance"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Date de naissance"
            android:layout_height="52dp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Date_de_naissance"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Citoyenneté"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Citoyenneté"
            android:layout_height="52dp"/>


        <Button
            android:layout_width="360dp"
            android:background="@color/purple_200"
            android:id="@+id/R_Sinscrire_maintenant"
            android:layout_below="@+id/R_Citoyenneté"
            android:text="S'inscrire maintenant"
            android:fontFamily="@font/lateefregular"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="30dp"
            android:padding="@dimen/_7sdp"
            android:layout_height="52dp"/>
    </RelativeLayout>
</ScrollView>



