<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_splash"
    android:fillViewport="true"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/R_rl"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/R_backarrow"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/register"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/R_Profileimage"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:text="Register"/>
        </RelativeLayout>

        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_rl"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Prénom"
            android:textSize="@dimen/_18sdp"
            android:inputType="text"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Prénom"
            android:layout_height="52dp"/>

        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Prénom"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_nom_de_famille"
            android:textSize="@dimen/_18sdp"
            android:inputType="text"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="nom de famille"
            android:layout_height="52dp"/>
        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_nom_de_famille"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Adresse_email"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="E-mail"
            android:layout_height="52dp"/>

        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Adresse_email"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:id="@+id/R_Mot_de_passe"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/lateefregular"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Mot de passe"
            android:layout_height="52dp"/>

        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Mot_de_passe"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Numéro_de_téléphone"
            android:inputType="phone"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Numéro de téléphone"
            android:layout_height="52dp"/>


        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Numéro_de_téléphone"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:id="@+id/R_Date_de_naissance"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/lateefregular"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Date de naissance (1998-10-04)"
            android:layout_height="52dp"/>
        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Date_de_naissance"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_lieu_de_naissance"
            android:inputType="text"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="lieu de naissance"
            android:layout_height="52dp"/>



        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_lieu_de_naissance"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Citoyenneté"
            android:inputType="text"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Citoyenneté"
            android:layout_height="52dp"/>



        <EditText
            android:layout_width="360dp"
            android:layout_below="@+id/R_Citoyenneté"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_2"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/lateefregular"
            android:id="@+id/R_Adresse"
            android:inputType="text"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#7C6A6A"
            android:textColorHint="#7C6A6A"
            android:hint="Adresse"
            android:layout_height="52dp"/>

        <Button
            android:layout_width="360dp"
            android:background="@color/purple_200"
            android:id="@+id/R_Sinscrire_maintenant"
            android:layout_below="@+id/R_Adresse"
            android:text="S'inscrire "
            android:textStyle="bold"
            android:fontFamily="@font/lateefregular"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="30dp"
            android:padding="@dimen/_7sdp"
            android:layout_height="52dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/linear1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/R_Sinscrire_maintenant"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Vous avez déjà un compte?"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/lateefregular"
                android:textStyle="bold"
                android:textColor="#2E1D1D"
                android:id="@+id/arhacc"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="connexion"
                android:fontFamily="@font/lateefregular"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:id="@+id/R_connexion"
                android:layout_toRightOf="@+id/arhacc"
                android:textColor="#ff8f47"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>



    </RelativeLayout>
</ScrollView>



